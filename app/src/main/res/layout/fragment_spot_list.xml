<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/spotList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/noFavLayout"
        android:visibility="gone"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#33000000"
            android:text="Du hast noch keine Favoriten. Füge eine Lokalität hinzu, indem du in der Detailansicht auf das Herz oben rechts klickst!"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/venue_list_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/venue_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>


</FrameLayout>